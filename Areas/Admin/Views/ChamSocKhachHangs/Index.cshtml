@{
    ViewData["Title"] = "Chăm sóc khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>

<h4 class="chat-title"><i class="fa-solid fa-comments"></i> Chat với khách hàng</h4>

<div class="chat-wrapper">
    <!-- Sidebar danh sách khách hàng -->
    <div class="chat-sidebar">
        <div class="chat-search">
            <input type="text" placeholder="Tìm khách hàng..." />
        </div>
        <ul class="chat-users" id="userList">
           @foreach (var user in Model.Users)
            {
                <li data-id="@user.TaiKhoanId">
                    <i class="fa-solid fa-user"></i>
                    <span>@user.HoTen</span>
                </li>
            }
        </ul>
    </div>

    <!-- Khung chat chính -->
    <div class="chat-main">
        <div id="messagesList" class="chat-messages"></div>
        <div id="inputArea" class="chat-input">
            <input type="text" id="messageInput" placeholder="Nhập tin nhắn..." />
            <button id="emojiButton" class="emoji-btn">😀</button>
            <button id="sendButton"><i class="fa-solid fa-paper-plane"></i> Gửi</button>
            <div id="emojiPicker" class="emoji-picker"></div>
        </div>

    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

    connection.on("ReceiveMessage", function (user, message) {
        const msg = document.createElement("div");
        msg.className = user === "Admin" ? "message admin" : "message customer";
        msg.innerHTML = `<div class="bubble"><strong>${user}</strong><br/>${message}</div>`;
        document.getElementById("messagesList").appendChild(msg);
        document.getElementById("messagesList").scrollTop = messagesList.scrollHeight;
    });

    connection.start().catch(err => console.error(err));

        const emojiButton = document.getElementById("emojiButton");
    const emojiPicker = document.getElementById("emojiPicker");
    const messageInput = document.getElementById("messageInput");

    const emojis = ["😀","😂","😍","😎","😭","😡","👍","🙏","🎉","💖"];
    emojis.forEach(e => {
        const span = document.createElement("span");
        span.textContent = e;
        span.addEventListener("click", () => {
            messageInput.value += e;
            emojiPicker.style.display = "none";
            messageInput.focus();
        });
        emojiPicker.appendChild(span);
    });

    emojiButton.addEventListener("click", () => {
        emojiPicker.style.display = emojiPicker.style.display === "flex" ? "none" : "flex";
    });

    document.getElementById("sendButton").addEventListener("click", () => {
        const message = messageInput.value.trim();
        if (message) {
            connection.invoke("SendMessage", "Admin", message).catch(err => console.error(err));
            messageInput.value = "";
        }
    });


    document.getElementById("sendButton").addEventListener("click", function () {
        const input = document.getElementById("messageInput");
        const message = input.value.trim();
        if (message) {
            connection.invoke("SendMessage", "Admin", message);
            input.value = "";
        }
    });
</script>

<style>
