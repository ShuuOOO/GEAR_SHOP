@model TL4_SHOP.Data.NhaCungCap
@{
    ViewData["Title"] = (Model?.NhaCungCapId > 0 ? "Sửa" : "Thêm") + " nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
}
<h4 class="mb-3">@ViewData["Title"]</h4>
<div class="card">
    <div class="card-body">
        <form asp-action="@(Model?.NhaCungCapId > 0 ? "Edit" : "Create")" method="post">
            @Html.AntiForgeryToken()
            @if (Model?.NhaCungCapId > 0)
            {
                <input type="hidden" asp-for="NhaCungCapId" />
            }
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="TenNhaCungCap" class="form-label"></label>
                    <input class="form-control" asp-for="TenNhaCungCap" />
                    <span asp-validation-for="TenNhaCungCap" class="text-danger"></span>
                </div>
                <div class="col-md-3"><label asp-for="Phone" class="form-label"></label><input class="form-control" asp-for="Phone" /></div>
                <div class="col-md-3"><label asp-for="Email" class="form-label"></label><input class="form-control" asp-for="Email" /></div>
                <div class="col-12"><label asp-for="DiaChi" class="form-label"></label><input class="form-control" asp-for="DiaChi" /></div>
            </div>
            <div class="mt-3 d-flex gap-2"><a asp-action="Index" class="btn btn-outline-secondary">Huỷ</a><button class="btn btn-primary">Lưu</button></div>
        </form>
    </div>
</div>
