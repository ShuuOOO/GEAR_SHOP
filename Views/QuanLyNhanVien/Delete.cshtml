@model TL4_SHOP.Data.TaoTaiKhoan

@{
    ViewData["Title"] = "Xóa tài khoản";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center rounded-top-4">
            <h4><i class="bi bi-trash3-fill me-2"></i> Xóa tài khoản</h4>
        </div>
        <div class="card-body p-4">

            <p class="fs-5 text-center mb-4">
                Bạn có chắc chắn muốn xóa tài khoản sau đây?
            </p>

            <table class="table table-bordered text-center align-middle mb-4">
                <tbody>
                    <tr>
                        <th class="bg-light w-25">Họ tên</th>
                        <td>@Model.HoTen</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Điện thoại</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Loại tài khoản</th>
                        <td>@Model.LoaiTaiKhoan</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Vai trò</th>
                        <td>@Model.VaiTro</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="TaiKhoanId" />
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-check-circle-fill me-1"></i> Xóa
                    </button>
                </form>

                <a asp-action="QuanLyNhanVien" class="btn btn-secondary px-4">
                    <i class="bi bi-arrow-left-circle me-1"></i> Hủy
                </a>
            </div>

        </div>
    </div>
</div>
