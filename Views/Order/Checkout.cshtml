@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          // Hiển thị khối Visa khi chọn
          const radios        = document.querySelectorAll('input[name="phuongThucThanhToan"]');
          const visaContainer = document.getElementById('visa-container');
          const qrContainer   = document.getElementById('qr-container');

          radios.forEach(r => r.addEventListener('change', function () {
            if (this.value === 'Visa') { visaContainer.style.display = 'block'; qrContainer.style.display = 'none'; }
            else if (this.value === 'ChuyenKhoan' || this.value === 'Momo') { visaContainer.style.display = 'none'; qrContainer.style.display = 'block'; }
            else { visaContainer.style.display = 'none'; qrContainer.style.display = 'none'; }
          }));
          const selected = document.querySelector('input[name="phuongThucThanhToan"]:checked');
          if (selected) selected.dispatchEvent(new Event('change'));

          // --- Visa form logic ---
          const numberInput = document.getElementById('cardNumber');
          const logoImg     = document.getElementById('cardLogo');
          const mm          = document.getElementById('expiryMonth');
          const yy          = document.getElementById('expiryYear');
          const expiryHid   = document.getElementById('visaExpiryHidden');
          const btnConfirm  = document.getElementById('btnVisaConfirm');

          function updateExpiryHidden(){
            expiryHid.value = (mm.value && yy.value) ? `${mm.value}/${yy.value}` : '';
          }
          mm.addEventListener('change', updateExpiryHidden);
          yy.addEventListener('change', updateExpiryHidden);
          updateExpiryHidden();

          // Format số thẻ xxxx xxxx ... và nhận diện logo
          numberInput.addEventListener('input', function(){
            let v = this.value.replace(/\D/g,'').slice(0,19);
            this.value = v.replace(/(\d{4})(?=\d)/g,'$1 ').trim();

            const clean = v;
            if (/^4/.test(clean)) {
              logoImg.src = '/images/payment/visa.png'; logoImg.style.display = 'block';
            } else if (/^5[1-5]/.test(clean)) {
              logoImg.src = '/images/payment/mastercard.png'; logoImg.style.display = 'block';
            } else {
              logoImg.style.display = 'none';
            }
          });

          // Chỉ cho số ở CVV
          const cvv = document.getElementById('visaCVV');
          cvv.addEventListener('input', () => cvv.value = cvv.value.replace(/\D/g,'').slice(0,4));

          // Validate & demo confirm
          btnConfirm.addEventListener('click', function(){
            const card = numberInput.value.replace(/\s/g,'').trim();
            const exp  = expiryHid.value.trim();
            const name = document.getElementById('cardHolder').value.trim();

            if (!card || !exp || !cvv.value || !name) {
              return Swal.fire({icon:'warning', title:'Thiếu thông tin', text:'Vui lòng điền đủ thông tin thẻ.'});
            }
            if (!/^\d{13,19}$/.test(card)) {
              return Swal.fire({icon:'error', title:'Số thẻ không hợp lệ', text:'Số thẻ phải gồm 13–19 chữ số.'});
            }
            if (!/^(0[1-9]|1[0-2])\/\d{2}$/.test(exp)) {
              return Swal.fire({icon:'error', title:'Ngày hết hạn sai', text:'Định dạng MM/YY. Ví dụ 08/26.'});
            } else {
              const [m, y] = exp.split('/').map(Number);
              const d = new Date(); const cm = d.getMonth()+1; const cy = d.getFullYear()%100;
              if (!(y>cy || (y===cy && m>=cm))) {
                return Swal.fire({icon:'error', title:'Thẻ đã hết hạn', text:'Vui lòng chọn tháng/năm hợp lệ.'});
              }
            }
            if (!/^\d{3,4}$/.test(cvv.value)) {
              return Swal.fire({icon:'error', title:'CVV không hợp lệ', text:'CVV gồm 3–4 chữ số.'});
            }
            if (!/^[A-Z ]+$/.test(name.toUpperCase())) {
              return Swal.fire({icon:'error', title:'Tên chủ thẻ không hợp lệ', text:'Chỉ dùng chữ cái và khoảng trắng.'});
            }

            // Demo success
            Swal.fire({icon:'success', title:'Giao dịch thành công!', text:'LOVE YOU ♥♥♥'}).then(()=> {
              // bạn có thể submit form ở đây nếu muốn
              // document.querySelector('form[method="post"]').submit();
            });
          });
        });
    </script>
    <script>
        function isValidExpiryDate(expiry) {
            const regex = /^(0[1-9]|1[0-2])\/\d{2}$/;
            if (!regex.test(expiry)) return false;

            const [month, year] = expiry.split('/').map(Number);
            const now = new Date();
            const currentMonth = now.getMonth() + 1;
            const currentYear = now.getFullYear() % 100;

            return (year > currentYear) || (year === currentYear && month >= currentMonth);
        }

        function isValidCVV(cvv) {
            return /^[0-9]{3,4}$/.test(cvv);
        }

        function isValidCardNumber(number) {
            return /^[0-9]{13,19}$/.test(number.replace(/\s/g, ""));
        }

        function isValidCardHolder(name) {
            return /^[A-Z ]+$/.test(name.toUpperCase());
        }

        function hienThongBaoVisa() {
            const cardNumber = document.getElementById('cardNumber').value.trim();
            const expiry = document.querySelector('[name="visaExpiry"]').value.trim();
            const cvv = document.querySelector('[name="visaCVV"]').value.trim();
            const holder = document.querySelector('[name="cardHolder"]').value.trim();

            if (!cardNumber || !expiry || !cvv || !holder) {
                Swal.fire({ icon: 'warning', title: 'Thiếu thông tin', text: 'Vui lòng điền đầy đủ thông tin thẻ.' });
                return;
            }

            if (!isValidCardNumber(cardNumber)) {
                Swal.fire({ icon: 'error', title: 'Số thẻ không hợp lệ', text: 'Số thẻ phải gồm 13-19 chữ số.' });
                return;
            }

            if (!isValidExpiryDate(expiry)) {
                Swal.fire({ icon: 'error', title: 'Sai định dạng ngày', text: 'Ngày hết hạn không hợp lệ. Ví dụ: 08/26' });
                return;
            }

            if (!isValidCVV(cvv)) {
                Swal.fire({ icon: 'error', title: 'Sai CVV', text: 'CVV phải gồm 3 hoặc 4 chữ số.' });
                return;
            }

            if (!isValidCardHolder(holder)) {
                Swal.fire({ icon: 'error', title: 'Tên chủ thẻ không hợp lệ', text: 'Tên không được chứa số hoặc ký tự đặc biệt.' });
                return;
            }

            // Nếu mọi thứ đều hợp lệ
            Swal.fire({
                icon: 'success',
                title: 'Giao dịch thành công!',
                text: 'LOVE YOU ♥♥♥',
                confirmButtonText: 'OK'
            }).then(() => {
                window.location.href = '/';
            });
        }
