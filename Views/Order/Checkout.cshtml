<!-- SignalR -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/chatHub")
        .build();

    connection.on("ReceiveMessage", function (user, message) {
        const msg = document.createElement("div");
        msg.textContent = `${user}: ${message}`;
        document.getElementById("messagesList").appendChild(msg);
        document.getElementById("messagesList").scrollTop = document.getElementById("messagesList").scrollHeight;
    });

    connection.start().catch(err => console.error(err));

    document.getElementById("sendButton").addEventListener("click", function () {
        const message = document.getElementById("messageInput").value.trim();
        if (message) {
            connection.invoke("SendMessage", "Khách", message);
            document.getElementById("messageInput").value = "";
        }
    });

        document.getElementById("chatBar").addEventListener("click", function () {
        const chatBox = document.getElementById("chatBox");
        const chatBar = document.getElementById("chatBar");

        chatBox.style.display = "flex";
        chatBar.style.display = "none"; // Ẩn thanh chat khi mở khung chat
    });

        document.getElementById("minimizeButton").addEventListener("click", function () {
        document.getElementById("chatBox").style.display = "none";
        document.getElementById("chatBar").style.display = "block"; // Hiện lại thanh chat khi thu nhỏ khung chat
    });
</script>

@using TL4_SHOP.Extensions
@{
    ViewData["Title"] = "Thanh toán";
    var cart = Context.Session.GetObjectFromJson<List<CartItem>>("GioHang") ?? new();
    var tongTien = cart.Sum(x => x.ThanhTien);
    var phiVanChuyen = 15000;
    var tongCong = tongTien + phiVanChuyen;
}


 <!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Thanh toán</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Checkout</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Checkout Start -->
<form asp-action="Checkout" method="post">
    @Html.AntiForgeryToken()
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <input type="hidden" name="phiVanChuyen" value="@phiVanChuyen" />
    <input type="hidden" name="tongTien" value="@tongTien" />
    <div class="container-fluid pt-5 checkout">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4">
                    <h4 class="font-weight-semi-bold mb-4" style="font-family: Tahoma;">Địa chỉ thanh toán</h4>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Tên khách hàng</label>
                            <input class="form-control" type="text" name="tenKhachHang" placeholder="Nguyễn Văn A" required />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Số điện thoại</label>
                            <input class="form-control" type="text" name="soDienThoai" placeholder="0987654321" required />
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Địa chỉ giao hàng</label>
                            <input class="form-control" type="text" name="diaChiGiaoHang" placeholder="123 Đường ABC, Phường XYZ, TP.HCM" required />
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Ghi chú (nếu có)</label>
                            <input class="form-control" type="text" name="ghiChu" placeholder="Giao giờ hành chính" />
                        </div>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div class="col-md-12 form-group">
                                <label for="emailKhach">Email nhận đơn hàng</label>
                                <input class="form-control" type="email" name="emailKhach" placeholder="example@email.com" required />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Tổng đơn hàng</h4>
                    </div>
                    <div class="card-body p-0">
                        <table class="table mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0 font-weight-medium px-3">Sản phẩm</th>
                                    <th class="border-0 font-weight-medium text-right px-3">Giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in cart)
                                {
                                    <tr>
                                        <td class="px-3">@item.TenSanPham</td>
                                        <td class="text-right px-3">@item.ThanhTien.ToString("N0")đ</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="px-3 font-weight-medium">Tổng tiền</td>
                                    <td class="text-right px-3 font-weight-medium">@tongTien.ToString("N0")đ</td>
                                </tr>
                                <tr>
                                    <td class="px-3 font-weight-medium">Phí vận chuyển</td>
                                    <td class="text-right px-3 font-weight-medium">@phiVanChuyen.ToString("N0")đ</td>
                                </tr>
                                <tr class="bg-light">
                                    <td class="px-3 font-weight-bold">Tổng cộng</td>
                                    <td class="text-right px-3 font-weight-bold text-primary">@tongCong.ToString("N0")đ</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>


                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Phương thức thanh toán</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="phuongThucThanhToan" id="pttt_cod" value="TienMat" checked />
                            <label class="form-check-label" for="pttt_cod">Thanh toán khi nhận hàng (COD)</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="phuongThucThanhToan" id="pttt_bank" value="ChuyenKhoan" />
                            <label class="form-check-label" for="pttt_bank">Chuyển khoản ngân hàng</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="phuongThucThanhToan" id="pttt_momo" value="Momo" />
                            <label class="form-check-label" for="pttt_momo">Momo</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="phuongThucThanhToan" id="pttt_visa" value="Visa" />
                            <label class="form-check-label" for="pttt_visa">Visa / MasterCard</label>
                        </div>

                        <!-- QR chuyển khoản -->
                        <div id="qr-container" class="border rounded p-3 mt-3" style="display: none;">
                            <p><strong>Quét mã QR để thanh toán:</strong></p>
                            <img id="qr-image" src="" alt="QR Thanh toán" width="250" />
                            <p class="mt-2 mb-0">
                                💬 <strong>Nội dung chuyển khoản:</strong>
                                <span id="ma-don-tu-sinh" data-ma-don="@TempData["MaDonHang"]">Đang tạo...</span>
                            </p>
                            <p class="text-muted" style="font-size: 0.9em;">* Vui lòng ghi đúng nội dung để xác nhận đơn hàng.</p>
                        </div>

                        <!-- FORM THẺ VISA GIẢ LẬP -->
                        <div id="visa-container" class="border rounded p-3 mt-3" style="display: none;">
                            <h6 class="mb-3"><strong>Nhập thông tin thẻ</strong></h6>
                            <div class="form-group">
                                <label>Số thẻ</label>
                                <div style="position: relative;">
                                    <input id="cardNumber" class="form-control pr-5" placeholder="1234 5678 9012 3456" />
                                    <img id="cardLogo" src="" style="position:absolute; right:10px; top:50%; transform:translateY(-50%); height:24px; display:none;" />
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-6">
                                    <label>Ngày hết hạn</label>
                                    <div class="d-flex">
                                        <input id="expiryInput" type="text" class="form-control mr-2" placeholder="MM/YY" maxlength="5" style="max-width: 100px;" />
                                        <select id="expiryMonth" class="form-control mr-2" style="max-width: 80px;">
                                            <option value="">MM</option>
                                            @for (int m = 1; m <= 12; m++)
                                            {
                                                <option value="@m.ToString("D2")">@m.ToString("D2")</option>
                                            }
                                        </select>
                                        <select id="expiryYear" class="form-control" style="max-width: 90px;">
                                            <option value="">YY</option>
                                            @for (int y = DateTime.Now.Year; y <= DateTime.Now.Year + 10; y++)
                                            {
                                                <option value="@y.ToString().Substring(2)">@y</option>
                                            }
                                        </select>
                                    </div>
                                    <input type="hidden" name="visaExpiry" id="visaExpiryHidden" />
                                </div>
                                <div class="form-group col-6">
                                    <label>Mã CVV</label>
                                    <input name="visaCVV" class="form-control" placeholder="123" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Tên chủ thẻ</label>
                                <input name="cardHolder" class="form-control" placeholder="NGUYEN VAN A" required />
                            </div>
                            <div class="text-right mt-3">
                                <button type="button" class="btn btn-success" onclick="hienThongBaoVisa()">Xác nhận</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <button type="submit" class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" style="font-family: Tahoma;">
                            Đặt hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Checkout End -->
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const radios = document.querySelectorAll('input[name="phuongThucThanhToan"]');
            const qrContainer = document.getElementById('qr-container');
            const visaContainer = document.getElementById('visa-container');
            const qrImage = document.getElementById('qr-image');

            const maDonElement = document.getElementById('ma-don-tu-sinh');
            let maDon = maDonElement?.dataset.maDon;

            if (!maDon || maDon === "") {
                maDon = 'DH_' + Math.floor(100000 + Math.random() * 900000);
                maDonElement.innerText = maDon;
            } else {
                maDonElement.innerText = maDon;
            }

            radios.forEach(radio => {
                radio.addEventListener('change', function () {
                    switch (this.value) {
                        case 'ChuyenKhoan':
                            qrContainer.style.display = 'block';
                            visaContainer.style.display = 'none';
                            qrImage.src = 'https://api.qrserver.com/v1/create-qr-code/?data=' + encodeURIComponent("Chuyen khoan don hang " + maDon) + '&size=250x250';
                            break;
                        case 'Momo':
                            qrContainer.style.display = 'block';
                            visaContainer.style.display = 'none';

                            // Encode nội dung: MOMO | Mã đơn | Số tiền (tùy bạn)
                            const payload = `PAYMENT_MOMO|ORDER=${maDon}|AMOUNT=@tongCong`;
                            document.getElementById('qr-image').src =
                              'https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=' + encodeURIComponent(payload);
                            break;

                        case 'Visa':
                            qrContainer.style.display = 'none';
                            visaContainer.style.display = 'block';
                            break;
                        default:
                            qrContainer.style.display = 'none';
                            visaContainer.style.display = 'none';
                            break;
                    }
                });
            });

            const cardInput = document.getElementById("cardNumber");
            const cardLogo = document.getElementById("cardLogo");

            cardInput?.addEventListener("input", function () {
                const value = cardInput.value.replace(/\s/g, "");
                if (value.startsWith("4")) {
                    cardLogo.src = "/images/payment/visa.png";
                    cardLogo.style.display = "block";
                } else if (/^5[1-5]/.test(value)) {
                    cardLogo.src = "/images/payment/mastercard.png";
                    cardLogo.style.display = "block";
                } else {
                    cardLogo.style.display = "none";
                }
            });
        });
    </script>
    <script>
        function isValidExpiryDate(expiry) {
            const regex = /^(0[1-9]|1[0-2])\/\d{2}$/;
            if (!regex.test(expiry)) return false;

            const [month, year] = expiry.split('/').map(Number);
            const now = new Date();
            const currentMonth = now.getMonth() + 1;
            const currentYear = now.getFullYear() % 100;

            return (year > currentYear) || (year === currentYear && month >= currentMonth);
        }

        function isValidCVV(cvv) {
            return /^[0-9]{3,4}$/.test(cvv);
        }

        function isValidCardNumber(number) {
            return /^[0-9]{13,19}$/.test(number.replace(/\s/g, ""));
        }

        function isValidCardHolder(name) {
            return /^[A-Z ]+$/.test(name.toUpperCase());
        }

        function hienThongBaoVisa() {
            const cardNumber = document.getElementById('cardNumber').value.trim();
            const expiry = document.querySelector('[name="visaExpiry"]').value.trim();
            const cvv = document.querySelector('[name="visaCVV"]').value.trim();
            const holder = document.querySelector('[name="cardHolder"]').value.trim();

            if (!cardNumber || !expiry || !cvv || !holder) {
                Swal.fire({ icon: 'warning', title: 'Thiếu thông tin', text: 'Vui lòng điền đầy đủ thông tin thẻ.' });
                return;
            }

            if (!isValidCardNumber(cardNumber)) {
                Swal.fire({ icon: 'error', title: 'Số thẻ không hợp lệ', text: 'Số thẻ phải gồm 13-19 chữ số.' });
                return;
            }

            if (!isValidExpiryDate(expiry)) {
                Swal.fire({ icon: 'error', title: 'Sai định dạng ngày', text: 'Ngày hết hạn không hợp lệ. Ví dụ: 08/26' });
                return;
            }

            if (!isValidCVV(cvv)) {
                Swal.fire({ icon: 'error', title: 'Sai CVV', text: 'CVV phải gồm 3 hoặc 4 chữ số.' });
                return;
            }

            if (!isValidCardHolder(holder)) {
                Swal.fire({ icon: 'error', title: 'Tên chủ thẻ không hợp lệ', text: 'Tên không được chứa số hoặc ký tự đặc biệt.' });
                return;
            }

            // Nếu mọi thứ đều hợp lệ
            Swal.fire({
                icon: 'success',
                title: 'Giao dịch thành công!',
                text: 'LOVE YOU ♥♥♥',
                confirmButtonText: 'OK'
            }).then(() => {
                window.location.href = '/';
            });
        }
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById("expiryInput");
            const monthSelect = document.getElementById("expiryMonth");
            const yearSelect = document.getElementById("expiryYear");
            const hidden = document.getElementById("visaExpiryHidden");

            // Auto format MM/YY khi nhập tay
            input.addEventListener("input", function () {
                let value = input.value.replace(/[^\d]/g, '');
                if (value.length >= 3) {
                    value = value.slice(0, 2) + '/' + value.slice(2, 4);
                }
                input.value = value;

                // Sync với dropdown
                const [mm, yy] = input.value.split('/');
                if (mm && yy) {
                    monthSelect.value = mm;
                    yearSelect.value = yy;
                    hidden.value = mm + '/' + yy;
                }
            });

            // Nếu chọn dropdown → sync ngược lên input + hidden
            function syncFromSelect() {
                const mm = monthSelect.value;
                const yy = yearSelect.value;
                if (mm && yy) {
                    input.value = mm + '/' + yy;
                    hidden.value = mm + '/' + yy;
                }
            }

            monthSelect.addEventListener("change", syncFromSelect);
            yearSelect.addEventListener("change", syncFromSelect);
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}

