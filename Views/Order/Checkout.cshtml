    .chat-header {
        background: #D19C97;
        color: #fff;
        padding: 10px;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        font-weight: 700;
    }

    .minimize-btn {
        float: right;
        background: none;
        border: none;
        color: #fff;
        font-size: 1.2em;
        cursor: pointer;
        margin-right: 5px;
    }

        .minimize-btn:hover {
            color: #ccc;
        }

    .chat-messages {
        padding: 10px;
        height: 300px;
        overflow-y: auto;
        font-size: .9em;
    }

    .chat-input {
