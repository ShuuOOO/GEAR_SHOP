@model TL4_SHOP.Models.ViewModels.ShopViewModel

<link rel="stylesheet" href="~/css/shop.css" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-12">
            <form method="get" id="filterForm">
                <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />

                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Xem theo giá</h5>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="priceRange" value="" id="price-all"
                        @(Model.MinPrice == null && Model.MaxPrice == null ? "checked" : "")>
                        <label class="custom-control-label" for="price-all">Tất cả giá</label>
                        <span class="badge border font-weight-normal">@Model.TotalItems sản phẩm</span>
                    </div>
                    @for (int i = 0; i < Model.PriceRanges.Count; i++)
                    {
                        var range = Model.PriceRanges[i];
                        var isChecked = Model.MinPrice == range.Min && Model.MaxPrice == range.Max;
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" class="custom-control-input" name="priceRange"
                                   value="@range.Min-@range.Max" id="price-@i" @(isChecked ? "checked" : "")>
                            <label class="custom-control-label" for="price-@i">@range.Display</label>
                            <span class="badge border font-weight-normal">@range.ProductCount sản phẩm</span>
                        </div>
                    }
                </div>
                <!-- Price End -->
                <!-- Brand Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Xem theo thương hiệu</h5>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="nhaCungCapId" value="" id="brand-all"
                        @(Model.NhaCungCapId == null ? "checked" : "")>
                        <label class="custom-control-label" for="brand-all">Tất cả thương hiệu</label>
                        <span class="badge border font-weight-normal">@Model.NhaCungCaps.Count</span>
                    </div>
                    @foreach (var brand in Model.NhaCungCaps)
                    {
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" class="custom-control-input" name="nhaCungCapId"
                                   value="@brand.NhaCungCapId" id="brand-@brand.NhaCungCapId"
                            @(Model.NhaCungCapId == brand.NhaCungCapId ? "checked" : "")>
                            <label class="custom-control-label" for="brand-@brand.NhaCungCapId">@brand.TenNhaCungCap</label>
                            <span class="badge border font-weight-normal">@brand.SanPhams.Count sản phẩm</span>
                        </div>
                    }
                </div>
                <!-- Brand End -->
            </form>
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <form method="get" class="search-form">
                            <input type="hidden" name="danhMucId" value="@Model.DanhMucId" />
                            <input type="hidden" name="nhaCungCapId" value="@Model.NhaCungCapId" />
                            <input type="hidden" name="minPrice" value="@Model.MinPrice" />
                            <input type="hidden" name="maxPrice" value="@Model.MaxPrice" />
                            <input type="hidden" name="sortBy" value="@Model.SortBy" />

                            <div class="input-group">
                                <input type="text" name="searchTerm" class="form-control"
                                       placeholder="Tìm kiếm..." value="@Model.SearchTerm" id="searchInput">
                                <div class="input-group-append">
                                    <button type="submit" class="input-group-text bg-transparent text-primary">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div id="searchSuggestions" class="search-suggestions"></div>
                        </form>

                        <div class="dropdown ml-4">
                            <button class="btn border dropdown-toggle" type="button" id="triggerId"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Sắp xếp theo
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                <a class="dropdown-item sort-option" href="#" data-sort="newest">Mới nhất</a>
                                <a class="dropdown-item sort-option" href="#" data-sort="popular">Phổ biến</a>
                                <a class="dropdown-item sort-option" href="#" data-sort="price_asc">Giá thấp đến cao</a>
                                <a class="dropdown-item sort-option" href="#" data-sort="price_desc">Giá cao đến thấp</a>
                                <a class="dropdown-item sort-option" href="#" data-sort="name_asc">Tên A-Z</a>
                                <a class="dropdown-item sort-option" href="#" data-sort="name_desc">Tên Z-A</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Grid -->
                @if (Model.SanPhams != null && Model.SanPhams.Any())
                {
                    foreach (var product in Model.SanPhams)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                            <div class="card product-item border-0 mb-4">
                                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                    <img class="img-fluid w-100" src="~/img/@product.HinhAnh" alt="@product.TenSanPham">
                                </div>
                                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                    <h6 class="text-truncate mb-3">@product.TenSanPham</h6>
                                    <div class="d-flex justify-content-center">
                                        <h6>@product.Gia.ToString("N0")₫</h6>
                                    </div>
                                    @if (!string.IsNullOrEmpty(product.MoTa))
                                    {
                                        <div class="thongTinSanPham">
                                            <p>@product.MoTa</p>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer d-flex justify-content-between bg-light border">
                                    <a href="@Url.Action("Details", "SanPham", new { id = product.SanPhamId })" class="btn btn-sm text-dark p-0">
                                        <i class="fas fa-eye text-primary mr-1"></i> Xem chi tiết
                                    </a>
                                    <a href="#" class="btn btn-sm text-dark p-0" onclick="addToCart(@product.SanPhamId)">
                                        <i class="fas fa-shopping-cart text-primary mr-1"></i> Thêm vào giỏ hàng
                                    </a>
                                    <a href="javascript:void(0);" onclick="addToWishlist(@product.SanPhamId)" class="btn btn-sm text-dark p-0">
                                        <i class="fas fa-heart text-danger mr-1"></i> Yêu thích
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="alert alert-warning text-center">
                            <h5>Không tìm thấy sản phẩm phù hợp</h5>
                            <p>Vui lòng thử lại với từ khóa khác hoặc điều chỉnh bộ lọc.</p>
                        </div>
                    </div>
                }


                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="col-12 pb-1">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-3">
                                @if (Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Shop", new {
                                            searchTerm = Model.SearchTerm,
                                            danhMucId = Model.DanhMucId,
                                            nhaCungCapId = Model.NhaCungCapId,
                                            minPrice = Model.MinPrice,
                                            maxPrice = Model.MaxPrice,
                                            sortBy = Model.SortBy,
                                            page = Model.CurrentPage - 1
                                        })" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                }

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Shop", new {
                                            searchTerm = Model.SearchTerm,
                                            danhMucId = Model.DanhMucId,
                                            nhaCungCapId = Model.NhaCungCapId,
                                            minPrice = Model.MinPrice,
                                            maxPrice = Model.MaxPrice,
                                            sortBy = Model.SortBy,
                                            page = i
                                        })">@i</a>
                                    </li>
                                }

                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Shop", new {
                                            searchTerm = Model.SearchTerm,
                                            danhMucId = Model.DanhMucId,
                                            nhaCungCapId = Model.NhaCungCapId,
                                            minPrice = Model.MinPrice,
                                            maxPrice = Model.MaxPrice,
                                            sortBy = Model.SortBy,
                                            page = Model.CurrentPage + 1
                                        })" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle filter form submission
            $('#filterForm input[type="radio"]').change(function() {
                var form = $('#filterForm');
                var searchTerm = $('input[name="searchTerm"]').val();
                var priceRange = $('input[name="priceRange"]:checked').val();
                var nhaCungCapId = $('input[name="nhaCungCapId"]:checked').val();

                var url = '@Url.Action("Shop", "Home")';
                var params = [];

                if (searchTerm) params.push('searchTerm=' + encodeURIComponent(searchTerm));
                if (priceRange) {
                    var prices = priceRange.split('-');
                    params.push('minPrice=' + prices[0]);
                    params.push('maxPrice=' + prices[1]);
                }
                if (nhaCungCapId) params.push('nhaCungCapId=' + nhaCungCapId);

                if (params.length > 0) {
                    url += '?' + params.join('&');
                }

                window.location.href = url;

        // LIVE SEARCH - hiển thị kết quả sản phẩm khi người dùng gõ tìm kiếm
        $("#live-search").on("keyup", function () {
            const term = $(this).val();
            if (term.length >= 2) {
                $.get("/Home/SearchSuggestions", { term: term }, function (data) {
                    let html = "";
                    data.forEach(function (item) {
                        html += `
                            <div class="search-result-item">
                                <img src="/images/products/${item.hinhAnh}" width="50" height="50" />
                                <span>${item.tenSanPham}</span>
                                <span class="ml-auto">${item.gia.toLocaleString()} ₫</span>
                            </div>`;
                    });
                    $("#live-search-results").html(html).show();
                });
            } else {
                $("#live-search-results").hide();
            }
        });
            });

            // Handle sort dropdown
            $('.sort-option').click(function(e) {
                e.preventDefault();
                var sortBy = $(this).data('sort');
                var currentUrl = new URL(window.location.href);
                currentUrl.searchParams.set('sortBy', sortBy);
                currentUrl.searchParams.set('page', '1'); // Reset to first page
                window.location.href = currentUrl.toString();
            });

            // Search suggestions (optional)
            $('#searchInput').on('input', function() {
                var searchTerm = $(this).val();
                if (searchTerm.length >= 2) {
                    $.ajax({
                        url: '@Url.Action("SearchSuggestions", "Home")',
                        type: 'GET',
                        data: { term: searchTerm },
                        success: function(data) {
                            var suggestions = $('#searchSuggestions');
                            suggestions.empty();
                            if (data && data.length > 0) {
                                suggestions.show();
                                $.each(data, function(index, item) {
                                    suggestions.append('<div class="suggestion-item" data-value="' + item + '">' + item + '</div>');
                                });
                            } else {
                                suggestions.hide();
                            }
                        }
                    });
                } else {
                    $('#searchSuggestions').hide();
                }
            });

            // Handle suggestion clicks
            $(document).on('click', '.suggestion-item', function() {
                var value = $(this).data('value');
                $('#searchInput').val(value);
                $('#searchSuggestions').hide();
                $('.search-form').submit();
            });

            // Hide suggestions when clicking outside
            $(document).click(function(e) {
                if (!$(e.target).closest('.search-form').length) {
                    $('#searchSuggestions').hide();
                }
            });
        });

        // Add to cart function
                function addToCart(productId) {
            $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: 1
                },
                success: function(response) {
                    if (response.success) {
                        $('#cart-count').text(response.cartCount);
                        $('.fa-shopping-cart').next('.badge').text(response.cartCount);

                        Toastify({
                            text: "🎉 Đã thêm sản phẩm vào giỏ hàng!",
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "#28a745",
                            close: true,
                            stopOnFocus: true
                        }).showToast();
                    } else {
                        Toastify({
                            text: "❌ Lỗi: " + response.message,
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "#dc3545",
                            close: true
                        }).showToast();
                    }
                },
                error: function() {
                    Toastify({
                        text: "❌ Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng!",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "#dc3545",
                        close: true
                    }).showToast();
                }
            });
        }
                 function addToWishlist(productId) {
            $.ajax({
                url: '/Wishlist/AddToWishlistAjax',
                type: 'POST',
                data: { productId: productId },
                success: function (response) {
                    if (response.success) {
                         $('#wishlist-count').text(response.wishlistCount);
                        Toastify({
                            text: "💖 " + response.message,
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "#ff4081",
                            close: true,
                            stopOnFocus: true
                        }).showToast();
                    } else {
                        Toastify({
                            text: "⚠️ " + response.message,
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "#ffc107",
                            close: true
                        }).showToast();
                    }
                },
                error: function () {
                    Toastify({
                        text: "❌ Có lỗi xảy ra khi thêm vào yêu thích!",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "#dc3545",
                        close: true
                    }).showToast();
                }
            });
        }

    </script>
    }
