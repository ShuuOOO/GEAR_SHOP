        <div class="col-lg-3 col-md-12">
            <form method="get" id="filterForm">
                <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />

                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Xem theo giá</h5>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="priceRange" value="" id="price-all"
                        @(Model.MinPrice == null && Model.MaxPrice == null ? "checked" : "")>
                        <label class="custom-control-label" for="price-all">Tất cả giá</label>
                        <span class="badge border font-weight-normal">@Model.TotalItems sản phẩm</span>
                    </div>
                    @for (int i = 0; i < Model.PriceRanges.Count; i++)
                    {
                        var range = Model.PriceRanges[i];
                        var isChecked = Model.MinPrice == range.Min && Model.MaxPrice == range.Max;
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" class="custom-control-input" name="priceRange"
                                   value="@range.Min-@range.Max" id="price-@i" @(isChecked ? "checked" : "")>
                            <label class="custom-control-label" for="price-@i">@range.Display</label>
                            <span class="badge border font-weight-normal">@range.ProductCount sản phẩm</span>
                        </div>
                    }
                </div>
                <!-- Price End -->
                <!-- Brand Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Xem theo thương hiệu</h5>
                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="radio" class="custom-control-input" name="nhaCungCapId" value="" id="brand-all"
                        @(Model.NhaCungCapId == null ? "checked" : "")>
                        <label class="custom-control-label" for="brand-all">Tất cả thương hiệu</label>
                        <span class="badge border font-weight-normal">@Model.NhaCungCaps.Count</span>
                    </div>
                    @foreach (var brand in Model.NhaCungCaps)
                    {
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" class="custom-control-input" name="nhaCungCapId"
                                   value="@brand.NhaCungCapId" id="brand-@brand.NhaCungCapId"
                            @(Model.NhaCungCapId == brand.NhaCungCapId ? "checked" : "")>
                            <label class="custom-control-label" for="brand-@brand.NhaCungCapId">@brand.TenNhaCungCap</label>
                            <span class="badge border font-weight-normal">@brand.SanPhams.Count sản phẩm</span>
                        </div>
                    }
                </div>
                <!-- Brand End -->
            </form>
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-12">
            <div class="row pb-3">
                @{
                    // Tách sản phẩm khuyến mãi hot
