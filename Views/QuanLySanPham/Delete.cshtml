@model TL4_SHOP.Data.SanPham

@{
	ViewData["Title"] = "Xóa sản phẩm";
	Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/css/admin.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<h1 style="font-family:Tahoma">Xóa sản phẩm</h1>
<div class="container py-4">
	<div class="card shadow border-0">
		<div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
			<h4 class="mb-0"><i class="fas fa-trash-alt me-2"></i style="font-family:Tahoma"> Xóa sản phẩm</h4>
			<a asp-action="Index" class="btn btn-light btn-sm">
				<i class="fas fa-arrow-left me-1"></i style="font-family:Tahoma"> Quay lại danh sách
			</a>
		</div>

		<div class="card-body">
			<div class="alert alert-warning" style="font-family:Tahoma">
				<strong style="font-family:Tahoma">Bạn có chắc chắn muốn xóa sản phẩm sau?</strong> Thao tác này sẽ không thể hoàn tác.
			</div>    <hr />
			<dl class="row">
				<dt class="col-sm-3" style="font-family:Tahoma">Tên sản phẩm</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.TenSanPham)
				</dd>
				<dt class="col-sm-3" style="font-family:Tahoma">Mô tả</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.MoTa)
				</dd>
				<dt class="col-sm-3" style="font-family:Tahoma">Giá bán</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.Gia)
				</dd>
				<dt class="col-sm-3" style="font-family:Tahoma">Số lượng tồn</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.SoLuongTon)
				</dd>
				<dt class="col-sm-3" style="font-family:Tahoma">Hình ảnh</dt>
				<dd class="col-sm-9">
					@if (!string.IsNullOrEmpty(Model.HinhAnh))
					{
						<img src="~/images/products/@Model.HinhAnh" alt="@Model.TenSanPham" class="img-thumbnail" style="max-width: 150px;" />
					}
					else
					{
						<span class="text-muted">Không có hình ảnh</span>
					}
				</dd>
				<dt class="col-sm-3" style="font-family:Tahoma">Danh mục</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)
				</dd>
				<dt class="col-sm-3" style="font-family:Tahoma">Nhà cung cấp</dt>
				<dd class="col-sm-9">
					@Html.DisplayFor(model => model.NhaCungCap.TenNhaCungCap)
				</dd>
			</dl>


			<form asp-action="Delete" method="post" class="mt-4">
				<input type="hidden" asp-for="SanPhamId" />
				<button type="submit" class="btn btn-danger" style="border-radius: 10px">
					<i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
				</button>
				<a asp-action="Index" class="btn btn-secondary ms-2" style="margin-left: 10px; border-radius: 10px">
					<i class="fas fa-times me-1"></i> Hủy bỏ
				</a>
			</form>
		</div>
