@model TL4_SHOP.Data.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}

<h1 class="mb-4" style="font-family:Tahoma">Chi tiết sản phẩm</h1>

<div class="card shadow p-4">
    <div class="row">
        <!-- Cột trái: Thông tin -->
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4" style="font-family:Tahoma">Tên sản phẩm:</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.TenSanPham)
                </dd>
                <dt class="col-sm-4" style="font-family:Tahoma">Mô tả:</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MoTa)
                </dd>
                <dt class="col-sm-4" style="font-family:Tahoma">Giá:</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Gia)
                </dd>
                <dt class="col-sm-4" style="font-family:Tahoma">Số lượng tồn:</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.SoLuongTon)
                </dd>
                <dt class="col-sm-4" style="font-family:Tahoma">Danh mục:</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)
                </dd>
                <dt class="col-sm-4" style="font-family:Tahoma">Nhà cung cấp:</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NhaCungCap.TenNhaCungCap)
                </dd>
            </dl>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.SanPhamId" class="btn btn-primary" style="font-family:Tahoma; border-radius: 10px; margin-top: 50px"> Chỉnh sửa</a>
                <a asp-action="Index" class="btn btn-secondary ms-2" style="font-family:Tahoma; margin-left: 10px; border-radius: 10px; margin-top: 50px"> Quay lại danh sách</a>
            </div>
        </div>

        <!-- Cột phải: Hình ảnh -->
        <div class="col-md-5 text-center">
            <img src="~/images/products/@Model.HinhAnh" alt="Ảnh sản phẩm" class="img-fluid rounded border" style="max-height: 300px;" />
            <p class="mt-2 text-muted"></p>
        </div>
    </div>
</div>

